<%= render 'layouts/title', title: 'Register User' %>
<%= render 'layouts/errors', obj: @user %>

<div class="container">
	<div class="well">
		<%= form_for @user, html:{class: "form-horizontal"} do |f| %>
		<div class = "form-group">
			<%= f.label :username, class: "col-md-2 control-label"   %>
				<div class="col-md-3">
					<%= f.text_field :username, class: "form-control" %>
				</div>
		</div>
		<div class = "form-group">
			<%= f.label :email, class: "col-md-2 control-label" %>
				<div class="col-md-3">
					<%= f.text_field :email, class: "form-control" %>
				</div>
		</div>
		<div class = "form-group">
			<%= f.label :password, class: "col-md-2 control-label" %>
				<div class = "col-md-3">
					<%= f.password_field :password, class: "form-control"%>
				</div>
		</div>
		<div class = "form-group">
			<%= f.label :manager, class: "col-md-2 control-label" %>
				<div class = "col-md-3">
					<%= f.text_field :manager, class: "form-control"%>
				</div>
		</div>
		<div class = "form-group">
			<div class="col-sm-offset-2 col-sm-3">
				<%= f.submit "Register", class:"btn btn-default btn-primary" %>
			</div>
		</div>
		<% end %>
	</div>
</div>