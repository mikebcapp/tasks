<%= render '/layouts/title', title: 'Log In' %>
<%=render '/layouts/flash_messages' %>

		<div class = "container">
			<div class = "well">
				<%=form_tag '/login', {class: 'form-horizontal', role:'form'} do %>
					<div class = "form-group">
						<%= label_tag :username, nil, class: "control-label col-md-2" %>
							<div class="col-md-3">
								<%= text_field_tag :username, nil, class: "form-control" %>
							</div>
					</div>

					<div class = "form-group">
						<div class = "control-label col-md-2 ">
							<%= label_tag :password %>
						</div>
						<div class = "col-md-3">
							<%= password_field_tag :password, nil, class: "form-control" %>
						</div>
					</div>
					<div class = "form-group">
						<div class="col-md-offset-2 col-md-3">
							<%= submit_tag 'Login', class: 'btn btn-default btn-primary'%> 
						</div>
					</div>
				<% end %>
			</div>
		</div>

