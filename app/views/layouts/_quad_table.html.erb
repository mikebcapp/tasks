
<div class="col-md-6 quarter;">
	<table class="table table-condensed ">
		<thead>
			<tr>
				<th>Task</th>
				<th>Importance</th>
				<th>Due Date</th>
				<th>Status</th>
			</tr>
		</thead>
		<tbody>
			<% task_types.select do |task|%>
				<tr>
					<td><%= link_to task.name, edit_task_path(@task) %></td>
					<td><%= task.importance %></td>
					<td><%= display_datetime(task.due) %></td>
					<td><%= task.status %></td>
				</tr>
			<%end %>
		</tbody>
	</table>
</div>
